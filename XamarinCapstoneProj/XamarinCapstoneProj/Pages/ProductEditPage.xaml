<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="XamarinCapstoneProj.Pages.ProductEditPage">
    <ContentPage.Content>
        <StackLayout>
            <Label x:Name="LblEditId"></Label>
            <Label x:Name="LblEditName" Text="{Binding editProduct.Name}"></Label>
            <Label x:Name="LblEditPrice"></Label>
            <Label x:Name="LblEditDesc"></Label>

            <Button x:Name="BtnBack" Text="Back" Clicked="BtnBack_Clicked"></Button>
            <Button x:Name="BtnUpdate" Text="Update" Clicked="BtnUpdate_Clicked"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>